
.UnitValueItem
  background-color: #FFF
  border-radius: 12px
  box-shadow: rgba(50, 50, 93, 0.25) 0px 2px 5px -1px, rgba(0, 0, 0, 0.3) 0px 1px 3px -1px;
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  text-decoration: none
  font-size: 26px
  color: #000
  padding: 20px
  .Label
    font-size: 18px

.Value
  display: flex
  flex-direction: row
  align-items: flex-end
  height: 100%
  .DisplayValue
    font-size: 28px
  .DisplayUnit
    font-size: 20px
    color: #333333
    height: 100%

