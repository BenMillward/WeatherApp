
.Container
  background-color: #DDD
  height: 100vh
  text-align: center

.Box
  background: linear-gradient(90deg, rgba(146,140,245,1) 0%, rgba(80,143,217,1) 34%, rgba(6,180,215,0.5942752100840336) 100%);
  border-radius: 12px
  display: inline-block
  height: auto
  min-height: 500px
  margin: 1rem
  position: relative
  width: 50%
  box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 15px 12px rgba(0,0,0,0.22);

.Header
  height: 75px
  border-radius: 0px
  width: 100%
  background-color: rgba(6,180,215,0.5942752100840336)
  border-bottom: 1px solid #888
  display: flex
  gap: 10px
  .Date
    color: white
    align-self: center
  a
    color: white
    padding: 5px
    text-decoration: none
    border: 1px solid
    font-size: 20px
    border-radius: 6px
    align-self: center
    margin: 20px
    box-shadow: rgba(50, 50, 93, 0.25) 0px 2px 5px -1px, rgba(0, 0, 0, 0.3) 0px 1px 3px -1px;


