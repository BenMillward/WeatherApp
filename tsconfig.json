{
  "compilerOptions": {
    "baseUrl": "./",
    "experimentalDecorators": true,
    "target": "es6",
    "lib": [
      "dom",
      "es7",
      "es5",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "sourceMap": true,
  },
  "include": [
    "src"
  ]
}
